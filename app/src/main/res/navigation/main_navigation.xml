<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:label="Home"
        android:id="@+id/navigation_home"
        tools:layout="@layout/fragment_home"
        android:name="android.josephhowerton.travelingsalesman.ui.main.home.HomeFragment"/>

    <fragment
        android:label="Dashboard"
        android:id="@+id/navigation_dashboard"
        tools:layout="@layout/fragment_dashboard"
        android:name="android.josephhowerton.travelingsalesman.ui.main.dashboard.DashboardFragment"/>

    <fragment
        android:label="Planned Trips"
        android:id="@+id/navigation_plans"
        tools:layout="@layout/fragment_plans"
        android:name="android.josephhowerton.travelingsalesman.ui.main.plans.PlansFragment"/>
    <fragment
        android:label="User Preferences"
        android:id="@+id/navigation_settings"
        android:name="android.josephhowerton.travelingsalesman.ui.main.settings.SettingsFragment"/>

    <fragment
        android:label="Account Management"
        android:id="@+id/navigation_account"
        android:name="android.josephhowerton.travelingsalesman.AccountManagementFragment" />

    <fragment
        android:label="Placeholder"
        android:id="@+id/navigation_placeholder"
        tools:layout="@layout/fragment_place_holder"
        android:name="android.josephhowerton.travelingsalesman.PlaceHolderFragment"/>

</navigation>